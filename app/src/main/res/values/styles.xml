<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/iu_button_black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/iu_button_black</item>
        <item name="colorPrimaryDark">@color/iu_button_black</item>
        <item name="colorAccent">@color/iu_button_black</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="LoginTheme" parent="MainTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="tint">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StandardItem" >
        <item name="android:background">@color/iu_button_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="StandardChipFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:background">@color/iu_button_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="chipBackgroundColor">@color/iu_button_black</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="closeIconTint">@color/white</item>
    </style>

</resources>