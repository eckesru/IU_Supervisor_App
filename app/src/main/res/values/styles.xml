<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginStyle" parent="MainTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionBarSize">80dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="LoginStyle">
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/standard_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/sourcesanspro_bold</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="StandardItem" >
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

</resources>